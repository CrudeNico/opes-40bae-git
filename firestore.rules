rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    // This reads the user's own document to check if they have Admin status
    // Handles both old format (isAdmin as array/boolean) and new format (statuses as array)
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (
               (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.statuses != null &&
                get(/databases/$(database)/documents/users/$(request.auth.uid)).data.statuses.hasAny(['Admin'])) ||
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true ||
               (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin != null &&
                get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin.hasAny(['Admin']))
             );
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read their own document
      allow get: if isOwner(userId);
      
      // Allow users to create their own document
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Allow users to update their own document
      allow update: if isAuthenticated() && isOwner(userId);
      
      // Allow admins to read any user document (including listing)
      allow get, list: if isAdmin();
      
      // Allow admins to update any user document
      allow update: if isAdmin();
      
      // Allow admins to create user documents
      allow create: if isAdmin();
    }

    // News collection
    match /news/{newsId} {
      // All authenticated users can read news (both get and list)
      allow read: if isAuthenticated();
      // Only admins can create, update, and delete news
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Allow list operation for news collection
    match /news {
      allow list: if isAuthenticated();
    }

    // Support Requests collection (consultation requests)
    match /supportRequests/{requestId} {
      // Allow anyone (authenticated or not) to create support requests
      // This allows homepage users to schedule consultations without logging in
      allow create: if true;
      // Users can read their own support requests (if userId matches)
      allow read: if isAuthenticated() && (resource.data.userId == null || resource.data.userId == request.auth.uid);
      // Admins can read all support requests
      allow read: if isAdmin();
      // Admins can update support requests
      allow update: if isAdmin();
    }

    // Support Messages collection (chat messages)
    match /supportMessages/{messageId} {
      // Users can create their own messages
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Admins can create messages (for responding to users)
      allow create: if isAdmin();
      // Users can read their own messages
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Admins can read all messages
      allow read: if isAdmin();
      // Admins can update messages (to add responses)
      allow update: if isAdmin();
    }
  }
}

